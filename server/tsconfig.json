{
	"compilerOptions": {
		"module": "NodeNext",
		"lib": [
			"ES6",
			"dom"
		],
		"rootDirs": [
			"./src"
		],
		"outDir": "./build",
		"allowJs": true,
		"target": "es2021",
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"moduleResolution": "NodeNext",
		"strictNullChecks": true,
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules"
	],
}